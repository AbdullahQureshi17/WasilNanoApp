<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.profile.ProfileStep3Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!--    <LinearLayout-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:orientation="horizontal">-->
            <!--        -->
            <!--        <androidx.appcompat.widget.AppCompatImageView-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:background="@drawable/ic_step"-->
            <!--        -->
            <!--        -->
            <!--    </LinearLayout>-->


            <LinearLayout
                android:background="@drawable/border_gray_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Profession Info"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:fontFamily="@font/quicksand_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Profession/Nature of business"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/sp_professions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/Light_Grey" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Income"
                    android:textSize="12sp"
                    android:textColor="@color/Black"
                    />
                <EditText
                    android:layout_marginStart="10dp"
                    android:imeOptions="actionNext"
                    android:maxHeight="0dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:paddingStart="@dimen/dp_10"
                    android:backgroundTint="@color/Transparent"
                    android:id="@+id/income_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Monthly income"
                    android:textColor="@color/Gray"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/border_gray_light"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Source of earning"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_earning_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="select here"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h10" />

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/border_gray_light"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Number of Dependents family members"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_dependent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="select here"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h10" />

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/border_gray_light"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Abroad visit information"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_abroad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="select here"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/visit_purpose"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/border_gray_light"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Abrod visit purpose"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_abroad_pur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="select here"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h10" />

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/border_gray_light"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Any active/close loan from MFI"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_open_close_loan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="select here"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h10" />

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/border_gray_light"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Do you avail loan from Akhuwat earlier"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_akhuwat_loan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="select here"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h10" />

            </LinearLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/border_gray_light"

                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                <TextView
                    android:id="@+id/account_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="Mobile wallet A/c#"
                    android:layout_centerVertical="true"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold"/>


                <EditText
                    android:imeOptions="actionDone"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:id="@+id/account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:backgroundTint="@color/Transparent"
                    android:hint="12456"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h12" />

                </RelativeLayout>



                <LinearLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/border_gray_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="Ducument attachment"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/h12"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/rl_cnic_front"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_doc_add"
                            android:layout_alignParentEnd="true"/>
                        <TextView
                            android:layout_toLeftOf="@id/logo"
                            android:id="@+id/documentation_cinc_front"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CNIC Front"
                            android:textColor="@color/Gray"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_cnic_back"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/logo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_doc_add"
                            android:layout_alignParentEnd="true"/>
                        <TextView
                            android:layout_toLeftOf="@id/logo2"
                            android:id="@+id/documentation_cnic_back"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CNIC Back"
                            android:textColor="@color/Gray"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_utility"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/logo3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_doc_add"
                            android:layout_alignParentEnd="true"/>
                        <TextView
                            android:layout_toLeftOf="@id/logo3"
                            android:id="@+id/documentation_utility"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Utility Bill"
                            android:textColor="@color/Gray"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rl_salary"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/logo4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_doc_add"
                            android:layout_alignParentEnd="true"/>
                        <TextView
                            android:layout_toLeftOf="@id/logo4"
                            android:id="@+id/documentation_salary"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Salary Slip"
                            android:textColor="@color/Gray"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </LinearLayout>


            <TextView
                android:id="@+id/tv_skip"
                android:padding="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                />

            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_marginEnd="5dp"
                    android:id="@+id/step2_back"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@color/DarkOrange"
                    android:text="Back"
                    android:textStyle="bold"
                    android:textSize="@dimen/h16" />

                <Button
                    android:layout_marginStart="5dp"
                    android:id="@+id/save_data"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/DarkOrange"
                    android:text="Save"
                    android:textStyle="bold"
                    android:textSize="@dimen/h16" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>