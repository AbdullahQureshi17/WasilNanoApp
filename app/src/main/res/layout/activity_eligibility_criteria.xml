<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/detail_bg"
tools:context=".presentation.activity.EligibilityCriteria">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/llnext"
    android:layout_marginBottom="8dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loan"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text=" Eligibility Criteria"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/h18"
            android:fontFamily="@font/quicksand_semi_bold" />






        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/tv_disclaimer"
            android:textSize="18sp"
            android:textColor="@color/dark_gray"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />


    </LinearLayout>




</ScrollView>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:id="@+id/llnext"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/dp_20">

    <TextView
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:text="time"
        android:textSize="14dp"
        android:textColor="@color/textcolor"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:background="@drawable/bt_gradient"
        android:text="Continue"
        android:textColor="@color/White"
        android:textSize="@dimen/h16"
        android:textStyle="bold" />

</LinearLayout>

</RelativeLayout>