                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:maxHeight="17dp"
                        android:text="Total Outstanding Amount"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/h12"
                        android:textStyle="bold" />

                    <EditText

                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:backgroundTint="@color/Transparent"
                        android:hint="Total Outstanding Amount"
                        android:inputType="number"
                        android:maxHeight="0dp"
                        android:textColor="@color/Gray"
                        android:textSize="@dimen/h14" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/montlyrepayment"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_light"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
