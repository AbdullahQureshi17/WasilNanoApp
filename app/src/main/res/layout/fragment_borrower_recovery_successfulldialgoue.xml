<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    android:background="@color/Transparent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@drawable/dialogue_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:src="@drawable/tick_sucess" />

        <LinearLayout
            android:background="@color/white"
            android:layout_below="@+id/iv_tick"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/Black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/congratulation"/>

            <TextView
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_medium"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:text="@string/your_recovery_is_recieved_please_wait_for_recovery_approval"/>

            <Button
                android:id="@+id/btn_continue"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:background="@drawable/bt_gradient"
                android:layout_width="106dp"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="@color/White"
                android:text="@string/continuee" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>