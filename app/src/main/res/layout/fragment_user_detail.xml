<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.businesscorrespondance.UserDetailFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <RelativeLayout
           android:id="@+id/header"
           android:layout_width="match_parent"
           android:layout_height="110dp"
           android:background="@drawable/screen_bg"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/back"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginStart="@dimen/dp_15"
               android:background="@drawable/ic_back_arrow"
               android:backgroundTint="@color/Black"
               android:padding="12dp" />
          <TextView
              android:id="@+id/tv_profile_heading"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="Profile"
              android:textColor="@color/Black"
              android:textSize="20sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/heading"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_profile_heading"
              android:layout_centerHorizontal="true"
              android:text="Basic Information"
              android:textColor="@color/Black"
              android:textSize="13sp"
              android:textStyle="bold" />


       </RelativeLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/border_gray_light"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:maxHeight="17dp"
                android:text="@string/cnic"
                android:textColor="@color/Black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <com.santalu.maskedittext.MaskEditText
                android:id="@+id/ed_cnic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:backgroundTint="@color/Transparent"
                android:hint="@string/enter_your_cnic"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxHeight="0dp"
                android:textColor="@color/Gray"
                android:textSize="@dimen/h14"
                mask:met_mask="#####-#######-#" />

        </LinearLayout>


       <LinearLayout
           android:background="@drawable/border_gray_light"
           android:layout_marginTop="10dp"
           android:layout_marginStart="@dimen/dp_15"
           android:layout_marginEnd="@dimen/dp_15"

           android:layout_width="match_parent"
           android:layout_height="65dp"
           android:orientation="vertical">

          <TextView
              android:maxHeight="17dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dp_15"
              android:layout_marginTop="@dimen/dp_10"
              android:text="@string/full_name"
              android:textColor="@color/Black"
              android:textSize="@dimen/h12"
              android:textStyle="bold" />

          <EditText

              android:id="@+id/ed_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dp_15"
              android:imeOptions="actionNext"
              android:backgroundTint="@color/Transparent"
              android:hint="@string/enter_your_full_name"
              android:inputType="text"
              android:maxHeight="0dp"
              android:textColor="@color/Gray"
              android:textSize="@dimen/h14" />


       </LinearLayout>

        <LinearLayout
            android:background="@drawable/border_gray_light"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:maxHeight="18dp"
                android:text="@string/parentage"
                android:textColor="@color/Black"
                android:textSize="@dimen/h12"
                android:textStyle="bold" />

            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/ed_parentage"
                android:inputType="text"
                android:maxHeight="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:backgroundTint="@color/Transparent"
                android:hint="@string/father_husband"
                android:textColor="@color/Gray"
                android:textSize="@dimen/h14" />




        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border_gray_light"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"

            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="vertical">

            <TextView
                android:maxHeight="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/enter_phone_no"
                android:textColor="@color/Black"
                android:textSize="@dimen/h12"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:backgroundTint="@color/Transparent"
                android:hint="@string/enter_phone_noo"
                android:inputType="number"
                android:maxHeight="0dp"
                android:maxLength="11"
                android:imeOptions="actionNext"
                android:textColor="@color/Gray"
                android:textSize="@dimen/h14" />


        </LinearLayout>


        <LinearLayout
           android:background="@drawable/border_gray_light"
           android:layout_marginTop="10dp"
           android:layout_marginStart="@dimen/dp_15"
           android:layout_marginEnd="@dimen/dp_15"

           android:layout_width="match_parent"
           android:layout_height="65dp"
           android:orientation="vertical">

          <TextView
              android:maxHeight="17dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dp_15"
              android:layout_marginTop="@dimen/dp_10"
              android:text="@string/loan_amountt"
              android:textColor="@color/Black"
              android:textSize="@dimen/h12"
              android:textStyle="bold" />

          <EditText

              android:id="@+id/ed_loanAmount"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dp_15"
              android:backgroundTint="@color/Transparent"
              android:hint="@string/enter_loan_amount"
              android:inputType="number"
              android:maxHeight="0dp"
              android:maxLength="7"
              android:textColor="@color/Gray"
              android:textSize="@dimen/h14" />


       </LinearLayout>


       <LinearLayout
           android:background="@drawable/border_gray_light"
           android:layout_marginTop="10dp"
           android:layout_marginStart="@dimen/dp_15"
           android:layout_marginEnd="@dimen/dp_15"

           android:layout_width="match_parent"
           android:layout_height="65dp"
           android:orientation="vertical">

          <TextView
              android:maxHeight="17dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dp_15"
              android:layout_marginTop="@dimen/dp_10"
              android:text="@string/enter_fee"
              android:textColor="@color/Black"
              android:textSize="@dimen/h12"
              android:textStyle="bold" />

          <EditText

              android:id="@+id/ed_fee"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dp_15"
              android:backgroundTint="@color/Transparent"
              android:hint="@string/enter_fee"
              android:inputType="number"
              android:maxHeight="0dp"
              android:maxLength="7"
              android:imeOptions="actionDone"
              android:textColor="@color/Gray"
              android:textSize="@dimen/h14" />


       </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvpurpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/quicksand_regular"
                    android:text="Loan Days"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spDuedate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h12" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
           android:background="@drawable/border_gray_light"
           android:layout_marginTop="10dp"
           android:layout_marginStart="@dimen/dp_15"
           android:layout_marginEnd="@dimen/dp_15"

           android:layout_width="match_parent"
           android:layout_height="65dp"
           android:orientation="vertical">

          <TextView
              android:maxHeight="17dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dp_15"
              android:layout_marginTop="@dimen/dp_10"
              android:text="@string/due_date"
              android:textColor="@color/Black"
              android:textSize="@dimen/h12"
              android:textStyle="bold" />

          <EditText

              android:id="@+id/ed_duedate"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dp_15"
              android:backgroundTint="@color/Transparent"
              android:hint="@string/your_due_date_is"
              android:inputType="text"
              android:maxHeight="0dp"
              android:textColor="@color/Gray"
              android:textSize="@dimen/h14" />


       </LinearLayout>



       <RelativeLayout
           android:layout_marginTop="24dp"
           android:layout_marginEnd="24dp"
           android:layout_marginStart="24dp"
           android:layout_below="@+id/ll_biometric"
           android:layout_width="match_parent"
           android:layout_marginBottom="@dimen/dp_30"
           android:layout_height="wrap_content">

           <Button

               android:id="@+id/addUser"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="8dp"
               android:layout_marginEnd="8dp"
               android:background="@drawable/bt_gradient"
               android:text="@string/add_loan"
               android:textColor="@color/White"
               android:textSize="@dimen/h12"
               android:textStyle="bold" />


       </RelativeLayout>


    </LinearLayout>

</ScrollView>