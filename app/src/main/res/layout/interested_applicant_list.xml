<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myloan"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rlmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="Status: "
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/loanstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_medium"
                    android:text=""
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:layout_toRightOf="@+id/serialno"
                android:id="@+id/name"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_semi_bold"
                android:text="Ahmad Shahzad"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/serialno"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_semi_bold"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="17sp"/>


            <LinearLayout

                android:layout_below="@+id/name"
                android:id="@+id/llphoneno"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_phone" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/phoneno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="03030303033 "
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_alignRight="@+id/llphoneno"
                android:id="@+id/llresponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llstatus"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">


                <TextView
                    android:textAlignment="viewEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="Response: "
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/callresponce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_medium"
                    android:text=""
                    android:textSize="13sp" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/llbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rladd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/roun_rect_view_white_bg_25dp_primary_boarder"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_addnew"
                    android:backgroundTint="@color/textcolor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toRightOf="@+id/image"

                    android:text="Apply Loan"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/round_bt_verify"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/ivAdd"
                    android:layout_width="17dp"
                    android:layout_height="11dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_show"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toRightOf="@+id/ivAdd"
                    android:text="View"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@+id/layout"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="4dp"
            android:background="@color/colorGray" />

        <LinearLayout
            android:id="@+id/llcalledby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:text="called by: "
                android:textSize="13sp" />

            <TextView
                android:id="@+id/calledby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text="Umer "
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>



</androidx.cardview.widget.CardView>