<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/myloan_bg"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".correspondant.fragment.VerificationFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llfirstlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/Transparent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@drawable/ic_back_arrow"
                android:backgroundTint="@color/textcolor"
                android:padding="12dp" />

            <TextView
                android:id="@+id/tv_profile_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/quicksand_bold"
                android:text="Verification"
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:fontFamily="@font/quicksand_medium"
                android:text="Ahmad Hassan"
                android:textColor="@color/textcolor"
                android:textSize="17sp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_pending" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="Requested Amount:"
                    android:textSize="@dimen/h12" />

                <TextView
                    android:id="@+id/requestedAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/quicksand_semi_bold"
                    android:text="5000 PKR"
                    android:textSize="@dimen/h15" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_cnic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="CNIC:"
                    android:textSize="@dimen/h12" />

                <TextView
                    android:id="@+id/cnic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/quicksand_semi_bold"
                    android:text="34101-5622233-1"
                    android:textSize="@dimen/h15" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlemail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/email" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="Email:"
                    android:textSize="@dimen/h12" />

                <TextView
                    android:id="@+id/emial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/quicksand_semi_bold"
                    android:text="ahmad@gmail.com"
                    android:textSize="@dimen/h15" />


            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_phoneno" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="Phone:"
                    android:textSize="@dimen/h12" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/quicksand_semi_bold"
                    android:text="0306-3214567"
                    android:textSize="@dimen/h15" />


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/circular_white"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/geotagging_of_current_address"
                android:textColor="@color/Black"
                android:textSize="@dimen/h12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_location_ponits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:drawableEnd="@drawable/ic_location"
                android:fontFamily="@font/quicksand_regular"
                android:hint="@string/select_geo_location"
                android:maxLines="1"
                android:paddingStart="3dp"
                android:paddingTop="5dp"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="5dp"
                android:textColor="@color/Gray"
                android:textSize="13sp"
                android:visibility="visible" />

<!--            <RelativeLayout-->
<!--                android:id="@+id/getDirection"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_marginStart="@dimen/dp_10"-->
<!--                android:background="@drawable/round_get_direction">-->

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="@dimen/dp_5"-->
<!--                    android:layout_marginEnd="@dimen/dp_5"-->
<!--                    android:fontFamily="@font/quicksand_medium"-->
<!--                    android:padding="6dp"-->
<!--                    android:text="Get Direction"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="@dimen/h12" />-->

<!--            </RelativeLayout>-->

        </LinearLayout>

        <RelativeLayout
            android:background="@drawable/round_white_cornors"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:paddingStart="7dp"
                android:paddingEnd="@dimen/dp_5"
                android:fontFamily="@font/quicksand_medium"
                android:background="@drawable/round_bt_reject"
                android:text="update" />

            <Button
                android:visibility="gone"
                android:id="@+id/getdirection"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_toLeftOf="@+id/update"
                android:background="@drawable/round_bt_verify"
                android:fontFamily="@font/quicksand_medium"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:text="Get Direction" />

<!--            <TextView-->
<!--                android:id="@+id/tv_text"-->
<!--                fontPath="font/gotham_rounded_medium.ttf"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:padding="10dp"-->
<!--                android:text="Saving your current location"-->
<!--                tools:ignore="MissingPrefix" />-->

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/update"
                map:uiScrollGestures="false"
                android:layout_marginTop="@dimen/dp_10" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/llfirstlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="30dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlverify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/round_bt_verify">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/quicksand_semi_bold"
                android:text="Verify"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlreject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/round_bt_reject">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/quicksand_semi_bold"
                android:text="Reject"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </RelativeLayout>


    </LinearLayout>
    </RelativeLayout>
</ScrollView>