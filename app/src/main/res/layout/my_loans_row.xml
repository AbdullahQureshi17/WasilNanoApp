    <androidx.cardview.widget.CardView
        android:id="@+id/myloan"
        app:cardElevation="0.3dp"
        android:elevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rlname"
                android:layout_marginTop="7dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Ahmad Shahzad"
                    android:textColor="@color/Black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/rl_status"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTint="@color/gradientstart"
                    android:text="May 5,2020"
                    android:textSize="@dimen/h10" />

                <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/rl_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bt_search"
                    android:paddingTop="3dp"
                    android:paddingEnd="3dp">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="Disbursed"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h10" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/rlname"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/disbursement_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTint="@color/gradientstart"
                    android:text="May 5,2020"
                    android:textSize="@dimen/h14" />


                <LinearLayout

                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/laonamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Loan Amount:  "
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_regular"
                        android:textColor="@color/Black"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/loan_amount"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/h14"
                        android:text="10000"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:textAlignment="center" />

                </LinearLayout>

            </RelativeLayout>



