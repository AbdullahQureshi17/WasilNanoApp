<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myloan_bg"
    android:orientation="vertical"
    tools:context=".presentation.fragment.SettingFragment">

    <LinearLayout
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@id/iv_drawer"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/welcome_to_e_qard"
            android:textAlignment="center"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/h22"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/iv_drawer"
            android:fontFamily="@font/quicksand_medium"
            android:text="Choose your Language"
            android:textAlignment="center"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/h14" />


        <RelativeLayout
            android:id="@+id/rlenglish"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/language_select_background_blue">

            <TextView
                android:id="@+id/english_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="English"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/h15" />

            <ImageView
                android:id="@+id/iv_english"
                android:layout_width="@dimen/dp_20"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"

                android:layout_marginStart="55dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/ic_checked" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlRoman"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/language_select_background_white">

            <TextView
                android:id="@+id/Roman_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Roman Urdu"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/h15" />

            <ImageView
                android:id="@+id/iv_roman"
                android:layout_width="@dimen/dp_20"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/ic_unchecked" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlurdu"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/language_select_background_white">

            <TextView
                android:id="@+id/Urdu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Urdu"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/h15" />

            <ImageView
                android:id="@+id/iv_urdu"
                android:layout_width="@dimen/dp_20"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/ic_unchecked" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@id/iv_drawer"
            android:fontFamily="@font/quicksand_medium"
            android:text="Your Language prefrence can be \n changed any time"
            android:textAlignment="center"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/h14" />

        <RelativeLayout
            android:id="@+id/rlContinue"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/language_select_golden_background"
            android:paddingStart="@dimen/dp_25"
            android:paddingEnd="@dimen/dp_25">

            <TextView
                android:id="@+id/buttonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Continue"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/h15" />


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>