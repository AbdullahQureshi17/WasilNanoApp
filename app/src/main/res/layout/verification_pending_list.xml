<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myloan"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/dp_10"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_toRightOf="@+id/serialno"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/quicksand_semi_bold"
            android:text="Ahmad Shahzad"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/serialno"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_semi_bold"
            android:text="1. "
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_below="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_phone"/>

            <TextView
                android:layout_marginStart="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="call: "
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0306-3214567"
                android:textSize="15sp"
                android:fontFamily="@font/quicksand_medium"
                android:id="@+id/phoneno"/>



        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rlverify"
            android:layout_marginEnd="@dimen/dp_15"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/round_verification_pending">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/image"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_pending"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Verify"
                android:layout_toRightOf="@+id/image"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"/>




        </RelativeLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>