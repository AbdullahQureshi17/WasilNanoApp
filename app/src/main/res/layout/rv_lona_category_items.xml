<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_loan_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MediumSlateBlue">

        <ImageView
            android:id="@+id/student_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_student"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"/>


        <TextView
            android:id="@+id/tv_loan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Loan"
            android:layout_toRightOf="@+id/student_image"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:textColor="@color/white"
            android:textSize="@dimen/h16"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_arrow_farword"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

</LinearLayout>