<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myloan"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/dp_10"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/serialno"
            android:fontFamily="@font/quicksand_semi_bold"
            android:text="Ahmad Shahzad"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/serialno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_semi_bold"
            android:text="1. "
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_below="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone no: "
                android:textSize="13sp"
                android:drawablePadding="@dimen/dp_5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03121234567"
                android:textSize="15sp"
                android:fontFamily="@font/quicksand_medium"
                android:id="@+id/cnic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:id="@+id/llstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:text="Status: "
                android:textSize="13sp" />

            <TextView
                android:id="@+id/loanstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text=""
                android:textSize="15sp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_marginEnd="@dimen/dp_10"
            android:id="@+id/loginas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/llstatus"

            android:background="@drawable/round_verification_pending"
            android:padding="5dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_borrower" />

            <TextView
                android:id="@+id/offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@+id/image"
                android:fontFamily="@font/quicksand_medium"
                android:text="Login as"
                android:textSize="14sp" />


        </RelativeLayout>

        <TextView
            android:layout_below="@+id/loginas"
            android:layout_alignParentEnd="true"
            android:id="@+id/syncstatus"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Not Sync"
            android:textSize="15sp" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>