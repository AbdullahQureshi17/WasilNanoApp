<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginStart="8dp"
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="55dp"
            app:srcCompat="@drawable/ic_login" />


        <LinearLayout
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/imageView"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@+id/tv_hed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="Ahmad Hassan"
                android:textSize="@dimen/h14"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@color/Black"
                />
            <TextView
                android:id="@+id/tv_hed_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gradientstart"
                android:clickable="true"
                android:textSize="@dimen/h12"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dp_5"
                android:text="My Profile"/>
        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true">
        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bt_gradient"
            android:layout_marginEnd="@dimen/dp_5"
            android:minHeight="@dimen/dp_30"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:text="Edit Profile"
            android:textSize="@dimen/h10"/>
</LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
