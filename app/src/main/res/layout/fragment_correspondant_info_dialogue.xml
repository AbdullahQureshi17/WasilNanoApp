<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none"
    android:clickable="true"
    android:focusable="true"
    tools:context=".correspondant.correspondantdialoguefragment.CorrespondantInfoDialogue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:rotation="180"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/info_header">


            </RelativeLayout>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="-55dp"
                android:textAlignment="center"
                android:text="Basic Information\n(Correspondant)"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/stroke_bg">

                    <ImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/default_image" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:elevation="5dp"
                    android:src="@drawable/add_image" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/border_gray_light"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:maxHeight="17dp"
                    android:text="@string/phone"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:backgroundTint="@color/Transparent"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:maxHeight="0dp"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/border_gray_light"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:maxHeight="17dp"
                    android:text="@string/full_name"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:backgroundTint="@color/Transparent"
                    android:hint="@string/enter_your_full_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxHeight="0dp"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h14" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Gender"
                android:textColor="@color/Black"
                android:textSize="@dimen/h12"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_30">

                <LinearLayout
                    android:id="@+id/l_male"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/border_orange_light">

                    <LinearLayout
                        android:id="@+id/ll_male"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/male"
                            android:layout_width="12dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:background="@drawable/ic_chcek_orange"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_male_orange" />

                        <TextView
                            android:id="@+id/tv_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:text="@string/male"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/h10"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_female"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_light"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/female"
                        android:layout_width="12dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_female_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="@string/female"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/h10"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout

                    android:id="@+id/l_transgender"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray_light"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/transgender"
                        android:layout_width="12dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_trans_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="@string/transgender"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/h10"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/border_gray_light"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:maxHeight="17dp"
                    android:text="@string/cnic"
                    android:textColor="@color/Black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <com.santalu.maskedittext.MaskEditText
                    android:id="@+id/ed_cnic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:backgroundTint="@color/Transparent"
                    android:hint="@string/enter_your_cnic"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxHeight="0dp"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h14"
                    mask:met_mask="#####-#######-#" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/border_gray_light"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/date_of_birth"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ed_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:drawableEnd="@drawable/ic_calendar_gray"
                    android:text="@string/select_date_of_birth"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h14" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/border_gray_light"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:maxHeight="17dp"
                    android:text="PIN Code* (for future login)"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/ed_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:backgroundTint="@color/Transparent"
                    android:hint="Enter 4 digit PIN"
                    android:inputType="numberPassword"
                    android:maxHeight="0dp"
                    android:maxLength="4"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/border_gray_light"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:maxHeight="18dp"
                    android:text="@string/parentage"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ed_parentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:backgroundTint="@color/Transparent"
                    android:hint="father/husband"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxHeight="0dp"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h14" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/border_gray_light"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/marital_status"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_marital_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/select_here"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h10" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/border_gray_light"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/quicksand_regular"
                    android:text="@string/select_your_branch"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:backgroundTint="@color/Transparent"
                    android:hint="branch"
                    android:clickable="false"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxHeight="0dp"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h14" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="16dp"

                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/border_gray_light"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:maxHeight="17dp"
                    android:text="@string/email_optional"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/ed_emil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:backgroundTint="@color/Transparent"
                    android:hint="@string/enter_your_valid_email_address"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxHeight="0dp"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/border_gray_light"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:maxHeight="18dp"
                    android:text="Employee Code"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ed_employeecode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:backgroundTint="@color/Transparent"
                    android:hint="enter employee code"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxHeight="0dp"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/border_gray_light"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:maxHeight="17dp"
                    android:text="Confirm PIN Code*"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/h12"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/ed_pin_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:backgroundTint="@color/Transparent"
                    android:hint="Enter 4 digit PIN"
                    android:inputType="numberPassword"
                    android:maxHeight="0dp"
                    android:maxLength="4"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/h14" />


            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bt_gradient"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/h14"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>



