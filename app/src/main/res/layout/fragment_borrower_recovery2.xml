        <!--            </LinearLayout>-->

        <LinearLayout
            android:id="@+id/firstaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llfee"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/jazzcash" />

                <TextView
                    android:id="@+id/jazzcash_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="Shahzad Ahmed"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h13" />

                <TextView
                    android:id="@+id/jazzcash_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="0306-123456789"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h16" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@color/white" />

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivEasyPasa"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/easypiasa" />

                <TextView
                    android:id="@+id/easypaisa_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivEasyPasa"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="Shahzad Ahmed"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h13" />

                <TextView
                    android:id="@+id/easypaisa_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/easypaisa_name"
                    android:fontFamily="@font/quicksand_bold"
                    android:singleLine="true"
                    android:text="0309-123456789"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h16" />


            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bankdetail"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="vertical">


            <ImageView
                android:visibility="visible"
                android:id="@+id/recipt"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/iv_image_place" />
            <ImageView
                android:id="@+id/add"
                android:layout_marginTop="-15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:elevation="5dp"
                android:src="@drawable/add_image" />

            <TextView
                android:id="@+id/cnic_front_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:fontFamily="@font/quicksand_semi_bold"
                android:text="@string/upload_receipt"
                android:textColor="@color/Black"
                android:textSize="11sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/border_gray_light"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Enter Amount in Rs."
                android:textColor="@color/Black"
                android:textSize="@dimen/h12"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:backgroundTint="@color/Transparent"
                android:hint="@string/enter_amount"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxHeight="0dp"
                android:maxLength="8"
                android:textColor="@color/Gray"
                android:textSize="@dimen/h14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/border_gray_light"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Mobile number fee paid from"
                android:textColor="@color/Black"
                android:textSize="@dimen/h12"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/walletnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:backgroundTint="@color/Transparent"
                android:hint="Enter mobile number of your wallet"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="11"
                android:maxHeight="0dp"
                android:textColor="@color/Gray"
                android:textSize="@dimen/h14" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/border_gray_light"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Date of fee payment"
                android:textColor="@color/Black"
                android:textSize="@dimen/h12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ed_submissiondate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_10"
                android:drawableEnd="@drawable/ic_calendar_gray"
                android:text="@string/select_date_of_transfer"
                android:textColor="@color/Gray"
                android:textSize="@dimen/h14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/border_gray_light"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Transcation number"
                android:textColor="@color/Black"
                android:textSize="@dimen/h12"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/recieptno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:backgroundTint="@color/Transparent"
                android:hint="@string/enter_transcation_no"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxHeight="0dp"
                android:textColor="@color/Gray"
                android:textSize="@dimen/h14" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bt_gradient"
            android:fontFamily="@font/quicksand_regular"
            android:text="@string/savee" />

    </LinearLayout>


</RelativeLayout>


</ScrollView>